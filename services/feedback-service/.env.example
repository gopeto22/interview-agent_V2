# Feedback Service Environment Variables

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/talentsync_feedback

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/3

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Anthropic Configuration
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Scoring Configuration
SEMANTIC_SIMILARITY_MODEL=all-MiniLM-L6-v2
FLUENCY_THRESHOLD=0.7
COMPLETENESS_THRESHOLD=0.6

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8006

# External Services
INTERVIEW_SERVICE_URL=http://localhost:8002
TRANSCRIPTION_SERVICE_URL=http://localhost:8005
