# Media Service Environment Variables

# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@localhost/talentsync_media

# File Storage Configuration
MEDIA_UPLOAD_DIR=/app/media
MAX_FILE_SIZE=104857600  # 100MB in bytes
ALLOWED_MEDIA_TYPES=["audio/wav", "audio/mp3", "audio/webm", "video/mp4", "video/webm"]

# WebRTC Configuration
ENABLE_WEBRTC=true
STUN_SERVERS=["stun:stun.l.google.com:19302"]

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_HOSTS=["localhost", "127.0.0.1"]

# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
PORT=8004

# External Services
USER_SERVICE_URL=http://localhost:8001
TRANSCRIPTION_SERVICE_URL=http://localhost:8005
